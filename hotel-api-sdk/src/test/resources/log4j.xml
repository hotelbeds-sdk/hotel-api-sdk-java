<!DOCTYPE log4j:configuration PUBLIC "-//APACHE//DTD LOG4J 1.2//EN" "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

  <!-- Appenders -->
  <appender name="console" class="org.apache.log4j.ConsoleAppender">
    <param name="Target" value="System.out" />
    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern" value="%d{yyyyMMdd HH:mm:ss} %-5p- %X{Log4UUIDFilter.UUID} - %c{1} - %m%n" /> <!-- para mostrar toda la ruta de la clase poner cambiar %C{1} por %c -->
    </layout>
  </appender>

  <logger name="com.hotelbeds">
    <level value="info" />
  </logger>

  <logger name="com.hotelbeds.distribution.hotel_api_sdk.helpers.LoggingRequestInterceptor">
    <level value="warn" />
  </logger>

  <!-- Root Logger -->
  <root>
    <priority value="warn" />
    <appender-ref ref="console" />
  </root>
</log4j:configuration>
